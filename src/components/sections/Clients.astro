<section id="clients">
  <canvas id="clients-canvas"></canvas>
  <div class="wrapper">
    <div class="section-label">Our Happy Clients</div>
    <h2 class="section-title">Work With Our <span>Clients</span></h2>
    <p class="section-desc">
      We are proud to have worked with some amazing creators.
    </p>
  </div>

  <div class="clients-marquee">
    <div class="marquee-track">
      <!-- First set of images -->
      {images.map((img) => (
        <div class="client-slide">
          <img src={`/clients/${img}`} loading="lazy" alt="Client work example" />
        </div>
      ))}

      <!-- Duplicate set for seamless loop -->
      {images.map((img) => (
        <div class="client-slide">
          <img src={`/clients/${img}`} loading="lazy" alt="Client work example" />
        </div>
      ))}
    </div>
  </div>
</section>
