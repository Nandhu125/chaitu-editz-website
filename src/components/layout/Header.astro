<header class="header" id="header">
  <div class="header-container">
    <a href="#home" class="logo">
      <span class="logo-text">Chaitu</span>
      <span class="logo-accent">Editz</span>
    </a>
    
    <nav class="nav-links" id="navLinks">
      <a href="#about">About</a>
      <a href="#services">Services</a>
      <a href="#portfolio">Portfolio</a>
      <a href="#reviews">Reviews</a>
      <a href="#pricing">Pricing</a>
      <a href="#contact">Contact</a>
    </nav>
    
    <button class="hamburger-menu" id="hamburger" aria-label="Toggle menu">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>
  </div>
</header>

<script>
  // Mobile menu toggle
  const hamburger = document.getElementById('hamburger');
  const navLinks = document.getElementById('navLinks');

  if (hamburger && navLinks) {
    hamburger.addEventListener('click', () => {
      navLinks.classList.toggle('active');
      hamburger.classList.toggle('active');
    });

    // Close menu when link clicked
    navLinks.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        navLinks.classList.remove('active');
        hamburger.classList.remove('active');
      });
    });
  }

  // Header background on scroll
  const header = document.getElementById('header');
  if (header) {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 50) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    });
  }
</script>

<style>
  /* Base Header Styles */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    transition: background-color 0.3s ease, padding 0.3s ease, backdrop-filter 0.3s ease;
    padding: 20px 0;
    background-color: transparent;
  }

  .header.scrolled {
    background-color: rgba(4, 7, 13, 0.9); /* Dark background matching theme */
    backdrop-filter: blur(10px);
    padding: 15px 0;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* Logo */
  .logo {
    font-size: 1.5rem;
    font-weight: 700;
    text-decoration: none;
    color: #f7f7f7; /* Text color from global */
    display: flex;
    align-items: center;
    gap: 2px;
  }

  .logo-text {
    color: #f7f7f7;
  }

  .logo-accent {
    color: #ffcd56; /* Accent color from global */
  }

  /* Navigation Links */
  .nav-links {
    display: flex;
    gap: 30px;
  }

  .nav-links a {
    color: #9ca3af; /* Muted text */
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-links a:hover {
    color: #ffcd56; /* Accent color */
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -4px;
    left: 0;
    background-color: #ffcd56;
    transition: width 0.3s ease;
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  /* Hamburger Menu */
  .hamburger-menu {
    display: none;
    cursor: pointer;
    background: none;
    border: none;
    padding: 10px;
    z-index: 1001;
  }

  .bar {
    display: block;
    width: 25px;
    height: 3px;
    margin: 5px auto;
    background-color: #f7f7f7;
    transition: all 0.3s ease-in-out;
    border-radius: 2px;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .hamburger-menu {
      display: block;
    }

    .nav-links {
      position: fixed;
      left: -100%;
      top: 0;
      flex-direction: column;
      background-color: #070b13; /* Dark bg-alt */
      width: 100%;
      height: 100vh; /* Full viewport height */
      text-align: center;
      transition: 0.3s;
      justify-content: center;
      gap: 40px;
      padding-top: 60px; /* Space for fixed header/close button if needed */
      z-index: 999; /* Below header z-index but above content */
    }

    .nav-links.active {
      left: 0;
    }

    .nav-links a {
      font-size: 1.5rem;
    }

    /* Hamburger Animation */
    .hamburger-menu.active .bar:nth-child(1) {
      transform: translateY(8px) rotate(45deg);
    }

    .hamburger-menu.active .bar:nth-child(2) {
      opacity: 0;
    }

    .hamburger-menu.active .bar:nth-child(3) {
      transform: translateY(-8px) rotate(-45deg);
    }
  }
</style>
